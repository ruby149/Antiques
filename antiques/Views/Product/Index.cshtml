@model IEnumerable<Product>

    <br />
    <div class="container row p-0 m-0">
        <div class="col-9">
            <h2 class="text-info">Products</h2>
        </div>
        <div class="col-3">
            <a class="btn btn-info form-control text-white" href="/Product/CreatProduct"> Create New Product</a>
        </div>
    </div>
    <div class="col-12 border p-3 mt-3 ">
        <form method="post">
            @if (Model.Count() > 0)
            { 
                <table class="table">
                    <tr>
                        <th>ID</th>
                        <th>Price</th>


                        <th>Description</th>

                        <th>Item</th>
                        <th>Category ID</th>
                        <th>User_ID</th>
                    </tr>
                    @foreach (var product in Model)
                    {
                <tr>
                    <td><a href=/Product/ViewProduct/@product.ProductID>@product.ProductID</a></td>

                    <td>@product.Price</td>

                    <td>@product.Description</td>
                    <td>@product.Item  </td>
                    <td>@product.CategoryID</td>
                    <td>@product.User_id</td>
                    <td>
                        <a href="/Product/EditProduct/@product.ProductID" class="btn btn-success btn-sm">Edit</a>
                        <button asp-action="DeleteBook" asp-for="BookID" value="@product.ProductID" onclick="return confirm('Are you sure you want to delete this product?')" class="btn btn-danger btn-sm">Delete</button>
                    </td>
                </tr>
                    }

                        </table>
                        }
                        else
                        {
                            <p>No Products Available</p>
                        }
                    </form>
                </div>








