@model Product
<br />
<h2 class="text-info">Edit Product</h2>
<br />
<div class="border container" style="padding:30px">
    @using (Html.BeginForm("UpdateProductToDatabase", "Product", "Post"))
    {
        <div class="col-6">
            <input asp-for="ProductID" type="hidden" value="@Model.ProductID" />
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Price">Product Price</label>
            </div>
            <div class="col-6">
                <input asp-for="Price" class="form-control" value="@Model.Price" />
            </div>
        </div>
     
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Description">Product Description </label>
            </div>
            <div class="col-6">
                <input asp-for="Description" class="form-control" value="@Model.Description" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Item">Item Name</label>
            </div>
            <div class="col-6">
                <input asp-for="Item" class="form-control" value="@Model.Item" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Category_ID"></label>
            </div>
            <div class="col-6">
                <select>
                    @foreach (var cat in Model.Categories)
                    {
                        <option value="@cat.CategoryID">@cat.CategoryID  @cat.Name</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a href="/Product/Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    }
</div>




